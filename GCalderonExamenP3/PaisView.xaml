<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GCalderonExamenP3.ViewModels"
             x:Class="GCalderonExamenP3.PaisView"
             Title="PaisView">
    <ContentPage.BindingContext>
        <vm:PaisViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="10">
        <Entry Placeholder="Ingrese el nombre del paÃ­s"
               Text="{Binding NombreBusqueda}" />
        <Button Text="Buscar"
                Command="{Binding BuscarPaisCommand}" />
        <ListView ItemsSource="{Binding Paises}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding name.common}" Detail="{Binding region}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Guardar"
                Command="{Binding GuardarPaisCommand}" />
        <Label Text="{Binding StatusMessage}" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>